  <input
    type="text"
    id="searchInput"
    placeholder="Search listings..."
    onkeyup="filterListings()"
    aria-label="Search listings"
  />

  <div id="categoryFilters" role="group" aria-label="Filter listings by category">
    <button class="active" onclick="filterByCategory('all', this)">All</button>
    <button onclick="filterByCategory('babysitting', this)">Babysitting</button>
    <button onclick="filterByCategory('lawn', this)">Lawn Care</button>
    <button onclick="filterByCategory('tutoring', this)">Tutoring</button>
    <button onclick="filterByCategory('creative', this)">Creative</button>
  </div>

  <section id="listings" aria-live="polite">
    <article class="listing-card" data-category="babysitting" tabindex="0" onclick="toggleDetails(this)" onkeypress="if(event.key==='Enter') toggleDetails(this)">
